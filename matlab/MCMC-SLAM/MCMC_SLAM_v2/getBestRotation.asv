%return the best theta for which R(theta)*lmVec0 ~ lmVec1
function theta = getBestRotation( lmVec0, lmVec1 )
    s = size( lmVec0,2 );
    for i=1:s
        theta0 = atan2(lmVec0(2,i), lmVec0(1,i));
        theta1 = atan2(lmVec1(2,i), lmVec1(1,i));
        dTheta = theta1-theta0;
        if( dTheta < 2*pi )
    end
end


